---
import "../styles/global.css";
import ThemeSelector from "../components/ThemeSelector.astro";

// Import any necessary components or utilities
interface Props {
  title?: string;
}

const { title = "Matthew Davis" } = Astro.props;

// Note: We're NOT adding the dark class to the HTML element anymore
// because we're using the checkbox state for that
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Matthew Davis is a software engineer." />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <!-- Font selector component -->
    <ThemeSelector />

    <!-- Theme toggle component -->

    <slot />
  </body>
</html>
