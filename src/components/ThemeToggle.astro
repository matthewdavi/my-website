---
// Check for system preference in the request headers (Astro provides this)
const prefersDarkMode =
  Astro.request.headers.get("sec-ch-prefers-color-scheme") === "dark";
---

<div class="fixed bottom-6 right-6 z-50 select-none">
  <!-- This is the checkbox that controls the CSS theme switching -->
  <input
    type="checkbox"
    id="theme-toggle"
    checked={prefersDarkMode}
    class="sr-only"
  />

  <!-- The visible toggle button -->
  <label
    for="theme-toggle"
    class="flex items-center justify-center w-12 h-12 rounded-full bg-surface border border-border shadow-md cursor-pointer transition-transform hover:scale-105"
    aria-label="Toggle dark mode"
    style="-webkit-tap-highlight-color: transparent;"
  >
    <!-- Sun icon (shown in dark mode) -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 text-accent-primary pointer-events-none hidden"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
      data-sun-icon
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
      ></path>
    </svg>

    <!-- Moon icon (shown in light mode) -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-6 w-6 text-accent-primary pointer-events-none"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      aria-hidden="true"
      data-moon-icon
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
      ></path>
    </svg>
  </label>
</div>

<style>
  /* Toggle icon visibility based on theme */
  @media (prefers-color-scheme: dark) {
    :root:not(:has(#theme-toggle:checked)) [data-sun-icon] {
      display: block;
    }

    :root:not(:has(#theme-toggle:checked)) [data-moon-icon] {
      display: none;
    }
  }

  /* Toggle icon visibility when checkbox is checked */
  :root:has(#theme-toggle:checked) [data-sun-icon] {
    display: var(--sun-display, none);
  }

  :root:has(#theme-toggle:checked) [data-moon-icon] {
    display: var(--moon-display, block);
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --sun-display: block;
      --moon-display: none;
    }

    :root:has(#theme-toggle:checked) {
      --sun-display: none;
      --moon-display: block;
    }
  }
</style>
